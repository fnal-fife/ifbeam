base="http://samweb-minerva.fnal.gov:20004/sam/minerva/api"

ifdh locateFile $base "MV_00003142_0014_numil_v09_1105080215_RawDigits_v1_linjc.root"

ifdh describeDefinition $base "mwm_test_2"

cpurl=`ifdh startProject $base mwm_20120308_1 minerva mwm_test_2 mengel minerva`

cpurl=`ifdh findProject $base mwm_20120308_1 mengel`

# fix cpurl for missing port number!

consumer_id=`ifdh establishProcess $cpurl mwm_20120308_1 myapp v1 bel-kwinith.fnal.gov mengel`

furi=`ifdh getNextFile $cpurl $consumer_id`

fname=`ifdh fetchInput $furi`

# udpateFileStatus is failing, but looks right...

ifdh updateFileStatus $cpurl  $consumer_id $fname skipped

ifdh updateFileStatus $cpurl  $consumer_id $fname transferred

ifdh updateFileStatus $cpurl  $consumer_id $fname consumed

ifdh setStatus $cpurl $consumer_id  bad

ifdh endProject $cpurl 


